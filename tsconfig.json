{
  "extends": "./.nuxt/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    ".nuxt/types/**/*.d.ts",
    "server/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "#app": [".nuxt/types/app"],
      "#build/*": [".nuxt/*"],
      "#types/*": [".nuxt/types/*"],
      "#pages/*": ["src/pages/*"],
      "#components/*": ["src/components/*"]
    },
    "types": ["@nuxt/schema", "@nuxt/types"],
    "noImplicitAny": false
  }
}
