{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@db/*": ["src/db/*"]
    }
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts",
    "server/**/*.ts",
    "nuxt.config.ts"
  ]
}
